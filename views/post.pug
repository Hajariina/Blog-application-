html
	head
		title View all posts
		include ../static/pug/head-tags.pug
	body
		include ../static/pug/header.pug
		#backgroundShowPosts
			#containerShowPosts
				// - var keys = Object.keys(post.createdAt)
				.post
					h1 #{messages.title}
					p by #{messages.user.username}
					p #{messages.content}
				.commentbox
					each comment in comments
						if comment.messageId == messages.id
							.comment
								h6 #{comment.user.username}
								p #{comment.content}
					form(action="/postcomment/"+messages.id method="post")
						input(type="text" name="comment")
						input#btn3(type="submit" value="comment" name="commenting")
				
		include ../static/pug/footer.pug
		script.
			console.log("#{messages.user.username}")
